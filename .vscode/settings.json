{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "python.formatting.provider": "yapf",
    "python.linting.pylintEnabled": true,
    "cSpell.words": [
        "Adany",
        "AISI",
        "arctan",
        "argsort",
        "argwhere",
        "centreline",
        "cfsm",
        "coeff",
        "CUFSM",
        "cython",
        "discretization",
        "dofs",
        "dtype",
        "eigs",
        "LAPACK",
        "linalg",
        "linspace",
        "logspace",
        "lstsq",
        "matplotlib",
        "mypy",
        "ndarray",
        "ORTHOGONALIZATION",
        "pspec",
        "pycufsm",
        "pylint",
        "pyplot",
        "pytest",
        "pyximport",
        "Sarawit",
        "Schafer",
        "scipy",
        "spla",
        "submatrices",
        "submatrix",
        "unlipped",
        "Zhanjie"
    ],
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "python.linting.mypyEnabled": true,
    "cSpell.diagnosticLevel": "Hint",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.formatOnPaste": true
}
