{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true
    },
    "python.formatting.provider": "yapf",
    "python.linting.pylintEnabled": true,
    "cSpell.words": [
        "CUFSM",
        "matplotlib",
        "mypy",
        "pspec",
        "pycufsm",
        "pylint",
        "pytest"
    ],
    "editor.formatOnSave": true
}
